  <!--This is code for Register form JSON + API Connection-->  
  <script type="text/javascript">	
	$.fn.serializeObject = function()
	{
    var o = {};
    var a = this.serializeArray();
    $.each(a, function() {
        if (o[this.name] !== undefined) {
            if (!o[this.name].push) {
                o[this.name] = [o[this.name]];
            }
            o[this.name].push(this.value || '');
        } else {
            o[this.name] = this.value || '';
        }
    });
    return o;
	};

	$(function() {
    $('#register-form').submit(function() {
        $('#result').text(JSON.stringify($('#register-form').serializeObject()));
        return false;
    });
	});
	  
	  
	  function createUser(){
	  	var encodedPassword = document.getElementById("password");
  		encodedPassword.value = window.btoa(encodedPassword.value);
  		
		var url = "http://54.215.165.222:9080/bigdata/v1/users";
		var representationOfDesiredState = JSON.stringify($('#register-form').serializeObject()); //this in our case would be JSON text
		var client = new XMLHttpRequest();

		client.open("POST", url, false);
		client.setRequestHeader("Content-Type", "application/json"); //this will also change to JSON
		client.send(representationOfDesiredState);

		if (client.status == 201)
	    	{alert("The request succeeded!\n\nNew User Created");
	    	window.location.reload();}
		else
	    	{alert("The request did not succeed!, try with different username");
	    	window.location.reload();}
		}
  </script>
  
  
